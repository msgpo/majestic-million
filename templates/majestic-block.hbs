<div>
    <span class="p-key">Global Rank: </span>
    <span class="p-value">{{details.GlobalRank}}</span>
    {{#if (gt details.GlobalRankDiff 0)}}
        {{fa-icon "arrow-up" class="green arrow-icon"}}<span class="green diff-text">+{{details.GlobalRankDiff}}</span>
    {{else if (lt details.GlobalRankDiff 0)}}
        {{fa-icon "arrow-down" class="p-red arrow-icon"}}<span class="p-red diff-text">{{details.GlobalRankDiff}}</span>
    {{/if}}
</div>
