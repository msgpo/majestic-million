<div class="p-action mt-2" {{action "togglePrevious"}}>
    {{#if showPrevious}}
        {{fa-icon "caret-down" fixedWidth=true}} Hide Previous
    {{else}}
        {{fa-icon "caret-up" fixedWidth=true}} View Previous
    {{/if}}
</div>
{{#if showPrevious}}
    <div>
        <span class="p-key">Prev Global Rank: </span>
        <span class="p-value">{{details.PrevGlobalRank}}</span>
    </div>
    <div>
        <span class="p-key">Prev Tld Rank: </span>
